<view class='detail_container'> 
  <image class='img' src="{{detailobj.detail_img}}"></image> 
  <view class='nav'> 
      <image src="{{detailobj.avatar}}"></image> 
      <text>{{detailobj.author}}</text> 
      <text>发布于 {{detailobj.date}}</text> 
  </view> 
  <text>{{detailobj.title}}</text> 
  <view class='tab'> 
      <text></text> 
      <view> 
          <image catchtap='ishide' wx:if="{{isshow}}" src="/images/icon/collection.png"></image> 
          <image catchtap='ishide' wx:else src="/images/icon/collection-anti.png"></image> 
          <image  src="/images/icon/share.png"></image> 
      </view> 
  </view>  
  <button>转发此文章</button> 
  <view> 
      <text>{{detailobj.detail_content}}</text> 
  </view> 
</view> 