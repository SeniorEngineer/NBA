/* pages/detail/detail.wxss */ 
.detail_container .img{ 
  width: 100%; 
  height: 400rpx; 
} 
.detail_container .nav{ 
  display: flex; 
  width:100%; 
  height:100rpx; 
  align-items: center; 
} 
.detail_container .nav image{ 
  width: 80rpx; 
  height: 80rpx; 
} 
.detail_container .tab{ 
  height: 100rpx; 
  width: 100%; 
  position: relative; 
} 
.detail_container .tab text{ 
  width: 90%; 
  background: #eeeeee; 
  height: 1px; 
  display: block; 
  position: absolute; 
  top: 40rpx; 
  z-index: -1; 
  left:5%; 
} 
.detail_container .tab view image{ 
  width: 80rpx; 
  height: 80rpx; 
  margin-left: 25rpx; 
} 
.detail_container .tab view{ 
  float: right; 
  margin-right: 70rpx; 
}